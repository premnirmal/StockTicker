<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_secondary</item>
    <item name="colorAccent">@color/color_accent</item>

    <item name="android:textViewStyle">@style/TextViewStyle</item>
    <item name="android:editTextStyle">@style/EditTextStyle</item>
    <item name="android:buttonStyle">@style/ButtonStyle</item>
    <item name="android:alertDialogTheme">@style/AlertDialog</item>
    <item name="android:dialogTheme">@style/AlertDialog</item>

    <!-- For AppCompat -->
    <item name="editTextStyle">@style/EditTextStyle</item>
    <item name="buttonStyle">@style/ButtonStyle</item>
  </style>

  <style name="ParanormalActivityTheme" parent="AppTheme"/>

  <style name="TranslucentTheme" parent="AppTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>

  <style name="SettingsActivityTheme" parent="TranslucentTheme"/>

  <style name="WidgetSettingsActivityTheme" parent="TranslucentTheme"/>

  <style name="TickerSelectorActivityTheme" parent="TranslucentTheme"/>

  <style name="TextViewStyle" parent="android:Widget.TextView">
    <item name="android:textSize">@dimen/text_size</item>
    <item name="fontPath">fonts/Ubuntu-Regular.ttf</item>
  </style>

  <style name="BoldTextView" parent="TextViewStyle">
    <item name="fontPath">fonts/Ubuntu-Bold.ttf</item>
  </style>

  <style name="TabTextAppearence" parent="TextAppearance.Design.Tab">
    <item name="fontPath">fonts/Ubuntu-Bold.ttf</item>
  </style>

  <style name="FooterTextView" parent="TextViewStyle">
    <item name="fontPath">fonts/Alegreya-Black-Italic.ttf</item>
    <item name="android:textSize">28sp</item>
  </style>

  <style name="ButtonStyle" parent="android:Widget.Button">
    <item name="android:textSize">@dimen/button_text</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="fontPath">fonts/Ubuntu-Bold.ttf</item>
    <item name="android:background">@drawable/button_bg</item>
  </style>

  <style name="EditTextStyle" parent="android:Widget.EditText">
    <item name="android:textSize">@dimen/text_size</item>
    <item name="fontPath">fonts/Ubuntu-Regular.ttf</item>
  </style>

  <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
    <item name="fontPath">fonts/Ubuntu-Bold.ttf</item>
  </style>

  <style name="ActionBarExpandedTitleText" parent="@style/ActionBarTitleText">
    <item name="android:textSize">34sp</item>
  </style>

  <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
    <item name="android:textColorPrimary">@color/color_accent</item>
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorPrimaryDark">@android:color/white</item>
    <item name="colorControlNormal">@color/color_accent</item>
    <item name="colorControlHighlight">@android:color/white</item>
    <item name="colorControlActivated">@android:color/white</item>
    <item name="android:background">@color/default_dark_bg</item>
  </style>

</resources>
